
@{
    ViewBag.Title = "AddMatch";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@model  SHBTONLINE.Areas.Play.Models.AddMatchForm
@using (Ajax.BeginForm("SaveAddMatch", "Play", new AjaxOptions() { OnBegin = "", OnSuccess = "funcOk", OnFailure = "funcFial" }, new { @class = "form-horizontal" }))
{
    @Html.TextBoxFor(p=>p.Name)
    @Html.TextBoxFor(p => p.P1)
    @Html.TextBoxFor(p => p.P2)
    @Html.TextBoxFor(p => p.Time)
    <table>
        <tr>
            <td>1            </td>
            <td>    @Html.TextBoxFor(p => p.Odds1)</td>
        </tr>
        <tr>
            <td>2</td>
            <td>
                @Html.TextBoxFor(p => p.Odds2)</td>
        </tr>
        <tr>
            <td>3</td>
            <td>
                @Html.TextBoxFor(p => p.Odds3)</td>
        </tr>
        <tr>
            <td>4</td>
            <td>
                @Html.TextBoxFor(p => p.Odds4)
            </td>
        </tr>
    </table>
    <select name="Sec">
