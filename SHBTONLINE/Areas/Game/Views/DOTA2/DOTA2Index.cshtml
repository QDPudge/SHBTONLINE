                    <tr class="table_info_row">
                        <td>英雄</td>
                        <td>模式</td>
                        <td>Level</td>
                        <td>KDA</td>
                        <td>结果</td>
                        <td>时间</td>
                    </tr>
                </table>
            </div>
            <div class="layui-tab-item">
                <!--  历史最佳  -->
