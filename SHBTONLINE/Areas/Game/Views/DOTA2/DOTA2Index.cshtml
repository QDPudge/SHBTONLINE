                        <td>英雄</td>
                        <td>类型</td>
                        <td>记录</td>
                        <td>战绩</td>
                        <td>时间</td>
                    </tr>
                </table>
            </div>
            <div class="layui-tab-item">
                <!--  我的队友  -->
