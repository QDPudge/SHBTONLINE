                    </a>
                </li>

                @if (SessionManager.Instance.UserInfoSession.LoginName == "nahua105" || SessionManager.Instance.UserInfoSession.userName == "王尔卡")
                {

                    <li style="float:left">
                        <a href="javascript:void(0);" class="js-sub-menu-toggle" onclick="sacrifice()">

                            <i class="layui-icon" style="color: #f37e7e;">&#xe756;</i>上香
                        </a>
                    </li>
                }
                <li style="float:right">
                    <a href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="layui-icon" style="color: #9deaa3;">&#xe61a;</i>  注销
                    </a>
                </li>
            </ul>
        </div>
    }
}
