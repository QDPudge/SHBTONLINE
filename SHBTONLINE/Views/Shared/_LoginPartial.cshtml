@using SHBTONLINE.Models.SystemModel;
@if (SessionManager.Instance.UserInfoSession != null && !string.IsNullOrEmpty(SessionManager.Instance.UserInfoSession.userName))
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div id="content" class="">
            <ul class="nav navbar-nav navbar-right">
                @*<li>
                        @Html.ActionLink(@SessionManager.Instance.UserInfoSession.userName + "，欢迎", "UserInfo", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>*@
                <li style="float:left">
                    <a href="javascript:void(0);" class="js-sub-menu-toggle" onclick="RefreshFrame('/Account/UserInfo')">
                        <span class="text"> @SessionManager.Instance.UserInfoSession.userName </span>
                    </a>
                </li>
                <li style="float:left">
                    <a href="javascript:void(0);" class="js-sub-menu-toggle" onclick="Attendance('@SessionManager.Instance.UserInfoSession.LoginName')">
